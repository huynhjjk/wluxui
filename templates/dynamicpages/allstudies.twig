{% extends 'layoutloggedin.twig' %}

{% block body %}

<h1>{{ pageData.title }}</h1>
      <div class="row">
        <div class="col-md-8">
          <div class="panel panel-default">
            <div class="panel-heading">
              <div class="row">
                <div class="col-md-8">
                  <h4>Studies Running Complete Draft Archived</h4>
                </div>
                <div class="col-md-4 text-right">
                  <a href="/newstudy.php"><button type="button" class="btn btn-primary">Create New Study</button></a>
                </div>
              </div>
            </div>
            <table class="table table-hover">
              <thead>
                <tr>
                  <th>Study</th>
                  <th>Status</th>
                  <th>Date Created</th>
                </tr>
              </thead>
              <tbody>
			    {% for study in studies %}
                <tr>
                  <td>
                    <a href=""><h5>{{study.name}}</h5></a>
                    <p>{{study.description}}</p>
                  </td>
                  <td>{{study.status}}</td>
                  <td>{{study.dateCreated}}</td>
                </tr>
			    {% endfor %}
              </tbody>
            </table>
          </div>
        </div>
        <div class="col-md-4">
          <div class="panel panel-default">
            <div class="panel-heading">
              <div class="row">
                <div class="col-md-6">
                  <h4>Study Details</h4>
                </div>
                <div class="col-md-6 text-right">
                  <div class="btn-group">
                    <button type="button" class="btn btn-success">Edit</button>              
                    <button type="button" class="btn btn-default">Data</button>
                  </div>                
                </div>
              </div>
            </div>
            <table class="table">
              <thead>
                <tr>
                  <th>Study</th>
                  <th>Last Modified</th>
                  <th>Group</th>
                </tr>
              </thead>
              <tbody>
			    {% for study in studies %}
                <tr>
                  <td>
                    <a href=""><h5>{{study.name}}</h5></a>
                  </td>
                  <td>{{study.dateCreated}}</td>
                  <td>[organization]</td>
                </tr>
			    {% endfor %}
              </tbody>
            </table>
          </div>
          <div class="panel panel-default">
            <div class="panel-heading">
              <div class="row">
                <div class="col-md-12">
                  <h4>Study Periods</h4>
                </div>
              </div>
            </div>
            <div class="panel-body">
              <p class="text-center">Period DATA goes here</p>
            </div>
          </div>
       </div>
     </div>

{% endblock %}
 

