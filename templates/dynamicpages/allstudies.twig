{% extends 'layoutloggedin.twig' %}

{% block body %}
<h1>{{ pageData.title }}</h1>
<h3>Studies Running Complete Draft Archived</h3>
<div id="wrapper">
  <div id="left_column">
    <table class="all">
      <thead class="all_head">
        <tr>
          <th class="header">Study Name</th>
          <th class="header">Status</th>
          <th class="header">Date Created</th>
          <th class="header"><a href="newstudy.php">+ New Study</a></th>
        </tr>
      </thead>
    </table>
    <table class="table table-hover">
      <thead>
        <tr>
          <th>Study</th>
          <th>Status</th>
          <th>Date Created</th>
        </tr>
      </thead>
      <tbody>
      {% for study in studies %}
      <tr class="all_row">
        <td class="cell"><em>{{ study.name }}</em> <br />
          <p class="all_description"> {{ study.description }}</p></td>
        <td class="cell"> {{study.status}} </td>
        <td class="cell"> {{study.dateCreated}} </td>
        <td class="cell">
          <form class="all_more" method="post">
            <button name="more" type="submit" value="{{study.name}}" id="{{study.name}}">Study Details &gt;</button>
          </form></td>
      </tr>
      {% endfor %}
	  </tbody>
    </table>
    <h4>Study Details</h4>
    <div class="col-md-6 text-right">
      <div class="btn-group">
        <button type="button" class="btn btn-success">Edit</button>
        <button type="button" class="btn btn-default">Data</button>
      </div>
      <table class="table">
        <thead>
          <tr>
            <th>Study</th>
            <th>Last Modified</th>
            <th>Group</th>
          </tr>
        </thead>
        <tbody>
        {% for study in studies %}
        <tr>
          <td><a href="">
            <h5>{{study.name}}</h5>
            </a></td>
          <td>{{study.dateCreated}}</td>
          <td>[organization]</td>
        </tr>
        {% endfor %}
		</tbody>
        </tr>
      </table>
    </div>
    <div class="panel panel-default">
      <div class="panel-heading">
        <div class="row">
          <div class="col-md-12">
            <h4>Study Periods</h4>
          </div>
        </div>
      </div>
      <div class="panel-body">
        <p class="text-center">Period DATA goes here</p>
      </div>
    </div>
  </div>
  <div id="right_column">
    <table class="right">
      <thead class="all_head">
        <tr>
          <th class="header">Study Details
            <div id="right_table_options"> <a href="#">Edit</a> <span> | </span> <a href="#">Data</a> </div>
          </th>
        </tr>
      </thead>
      <tbody>
          <tr class="right_row">
            <td class="right_title">studyName --should be hyperlinked--</td>
          </tr>
          <tr class="all_row_right">
            <td><p>Last Modified: dateModified</p></td>
          </tr>
          <tr class ="all_row_right">
            <td><p>Organization: researcherOrg</p></td>
          </tr>
      </tbody>
    </table>
    <table class="right">
	   <thead class="all_head">
         <tr>
          <th class="header">Study Periods</th>
         </tr>
       </thead>
        <tbody>
          <tr class="right_row">
            <td class="right_title"><p>Period DATA goes here</p></td>
          </tr>
        </tbody>
     </table>
   </div> <!-- END right_column -->
