{% extends 'layoutloggedin.twig' %}

{% block body %}

<div class="row">
  <div class="col-md-8 col-md-offset-2">
  <div class="panel panel-default">
  <!-- Form Header Panel -->
    <div class="panel-heading">
      <div class="row">
        <div class="col-md-4">
          <h3>Test Study [#]</h3>
        </div>
        <div class="col-md-8">
          <!-- Progress to create Study-->
          <p>
          <ul class="nav nav-pills">
            <li><a href="general">General</a></li>
            <li><a href="variables">Variables</a></li>
            <li><a href="protocol">Protocol</a></li>
            <li class="active"><a href="scheduling">Scheduling</a></li>
          </ul>
        </p>
        </div>
      </div>
    </div>
  <!-- Form Content Panel -->
    <div class="panel-body panel-heading">
    <form class="form-horizontal" role="form">
      <div class="row">
        <div class="col-md-4">
                  <div class='panel panel-default'>
                  <div class='panel-heading'>
                    <h4>Periods</h4>
                  </div>
                  <div class="panel-body">

                  </div>
                </div>

        </div>
        <div class="col-md-8">
                  <div class='panel panel-default'>
                  <div class='panel-heading'>
                    <h4>Period [#]</h4>
                  </div>
                  <div class="panel-body">
                    <div class="form-group">
                      <label class="col-md-3 control-label">Pool Description</label>
                      <div class="col-md-9">
                       <textarea class="form-control text-box" placeholder="Pool Description"></textarea>
                      </div>
                    </div>
                    <div class="form-group">
                      <label class="col-md-3 control-label">Pool Size</label>
                      <div class="col-md-9">
                        <input type="number" class="form-control input-box" placeholder="Pool Size">
                      </div>
                    </div>
                    <div class="form-group">
                      <label class="col-md-3 control-label">Email List</label>
                      <div class="col-md-9">
                         <textarea class="form-control text-box" placeholder="Email List"></textarea>
                      </div>
                    </div>
                    <div class="form-group">
                      <label class="col-md-3 control-label">Start</label>
                      <div class="col-md-9">
                        <div class="input-group">
                          <span class="input-group-addon"><span class="glyphicon glyphicon-calendar"></span></span>
                          <input type="email" class="form-control input-box" placeholder="Start Date">
                        </div>
                        <div class="input-group">
                          <span class="input-group-addon"><span class="glyphicon glyphicon-time"></span></span>
                          <input type="text" class="form-control input-box" placeholder="Start Time">
                        </div>
                      </div>
                    </div>
                    <div class="form-group">
                      <label class="col-md-3 control-label">End</label>
                      <div class="col-md-9">
                        <div class="input-group">
                          <span class="input-group-addon"><span class="glyphicon glyphicon-calendar"></span></span>
                          <input type="email" class="form-control input-box" placeholder="End Date">
                        </div>
                        <div class="input-group">
                          <span class="input-group-addon"><span class="glyphicon glyphicon-time"></span></span>
                          <input type="text" class="form-control input-box" placeholder="End Time">
                        </div>
                      </div>
                    </div>
                  <!-- Form Buttons -->
                    <div class="text-right">
                    <button type="button" id="isEditMode" class="btn btn-default">
                      Edit Fields <span class="glyphicon glyphicon-pencil"></span>
                    </button>       
                    </div>
                  </div>
                </div>
        </div>
      </div>
    </form>
    </div>
  </div>
  </div>
</div>


{% endblock %}
